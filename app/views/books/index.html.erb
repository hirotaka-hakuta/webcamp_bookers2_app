<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'layouts/error_messages', model: @book%>
      <%= render 'layouts/user_info', user: @user%>
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(current_user.id),class: "btn btn-secondary" ,method: :get  do %>
        <i class="fas fa-user-cog"></i>
      <%end%>
      <%end%>
      <%= render 'layouts/create_book', book: @book%>
    </div>

    <div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-inverse">
      <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
      <% @books.each do |book| %>
        <tr>
          <td>
          <%=link_to user_path(book.user.id) do%>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <%end%>
          </td>
          <td>
          <%=link_to book_path(book.id) do%>
            <p><%= book.title%></p>
          <%end%>
          </td>
          <td>
          <p>bodyï¼š<%= book.body %></p>
          </td>
        </tr>
      <% end %>
      </table>
     </div>


  </div>
</div>