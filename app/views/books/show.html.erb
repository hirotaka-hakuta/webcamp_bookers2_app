<div class="container">
  <div class="row">

            <%= render 'layouts/error_messages', model: @book2%>
    <div class="col-md-3">
      <%= render 'layouts/error_messages', model: @book%>
       <%= render 'layouts/user_info', user: @user%>

        <%= link_to edit_user_path(@user),class: "btn btn-secondary" ,method: :get  do %>
        <i class="fas fa-user-cog"></i>

      <%end%>
      <%= render 'layouts/create_book', book: @book2%>
     </div>

    <div class="col-md-8 offset-md-1">
  		<table class="table">
  		    <h2>Book detail</h2>
  		  <tbody><tr>
          <td>
                    <%=link_to user_path(@book.user) do%>
  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size:"40x40"  %>
<%end%><br>
     <%=link_to user_path(@book.user) do%>
    <span><%= @book.user.name%></span>
<%end%>
       </td>
          <td>    <%=link_to book_path(@book) do%>
  <p><%= @book.title %></p>
<%end%></td>
          <td>
  <p><%= @book.body %></p>
</td>
          <td>asd</td>
              <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-sm btn-success"%></td>
     <td><%= link_to "Destroy", book_path(@book),class: "btn btn-sm btn-danger",rel: "nofollow", data: { confirm: '本当に消しますか?' }, method: :delete %></td>

    <% end %>
        </tr>
      </tbody></table>

</div>

  </div>
</div>