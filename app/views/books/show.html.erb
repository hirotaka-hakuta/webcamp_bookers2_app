<div class="container">
  <div class="row">
    <table class="table table-striped">
            <%= render 'layouts/error_messages', model: @book2%>
    <div class="col-md-3">
      <%= render 'layouts/error_messages', model: @book%>
       <%= render 'layouts/user_info', user: @user%>

        <%= link_to edit_user_path(@user),class: "btn btn-secondary" ,method: :get  do %>
        <i class="fas fa-user-cog"></i>

      <%end%>
      <%= render 'layouts/create_book', book: @book2%>
     </div>

    <div class="col-md-8 offset-md-1">

<h2>Book detail</h2>

<div class="post-body">
      <%=link_to user_path(@book.user) do%>
  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<%end%>
    <span>ユーザーネーム:</span>
    <%=link_to user_path(@book.user) do%>
    <span><%= @book.user.name%></span>
<%end%>
    <%=link_to book_path(@book) do%>
  <p><%= @book.title %></p>
<%end%>

  <p>body：<%= @book.body %></p>
    <% if @book.user == current_user %>
     <%= link_to "Edit", edit_book_path(@book)%>
     <%= link_to "Destroy", book_path(@book), method: :delete %>

    <% end %>
</div>
</div>
