<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--<script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>-->


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
 <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <a class="navbar-brand", href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse collapse show" id="navbarNavDropdown" style="">

            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="header">
                  <%= link_to user_path(current_user.id),method: :get do %>
                   <span class="text-light"><i class="fas fa-home"></i>Home</span>
                  <%end%>
                </li>
                <li class="header">
                  <%= link_to users_path,method: :get  do %>
                   <span class="text-light"><i class="fas fa-users"></i>Users</span>
                  <%end%>
                </li>
                <li class="header">
       <%= link_to books_path,method: :get  do %>
              <span class="text-light"><i class="fas fa-book-open"></i>Books</span>
              <% end %>


                </li>
                <li class="header">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                   <span class="text-light"><i class="fas fa-sign-out-alt"></i>Logout</span>
                  <%end%>
                </li>

              <%else%>
                <li class="header">
                  <%= link_to "/",method: :get  do %>
                   <span class="text-light"><i class="fas fa-home"></i>Home</span>
                  <%end%>
                </li>
                <li class="header">
                  <%= link_to about_home_path,method: :get  do %>
                   <span class="text-light"><i class="fas fa-link"></i>About</span>
                  <%end%>
                </li>
                <li class="header">
                  <%= link_to new_user_registration_path,method: :get  do %>
                   <span class="text-light"><i class="fas fa-user-plus"></i>sign up</span>
                  <%end%>
                </li>
                <li class="header">


                  <%= link_to new_user_session_path,method: :get  do %>
                   <span class="text-light"><i class="fas fa-sign-in-alt"></i>login</span>
                  <%end%>

                </li>
            <% end %>
            </ul>
            </div>
            </div>

        </div>
      </nav>
    </header>
    <main class="mx-auto">

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

    <%= yield %>
    </main>
    <footer>
             <div class="container mt-5">
      <div class="row">
      <div class="mx-auto">
    <p>CopyRight Infratop.inc</p>
    </div>
    </div>
    </div>
    </footer>
  </body>
</html>
