
<div class="container">
  <div class="row">




     <div class="col-md-3">


      <%= render 'layouts/user_info', user: @user%>


        <%= link_to edit_user_path(@user.id),class: "btn btn-secondary" ,method: :get  do %>
        <i class="fas fa-user-cog"></i>
      <%end%>
      <%= render 'layouts/create_book', book: @book%>


     </div>

    <div class="col-md-8 offset-md-1">



<table class="table table-hover table-inverse">
<h2>Books</h2>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%=link_to user_path(@user) do%>
            <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size:"40x40"  %></p>
          <%end%>
        </td>
        <td>
          <%=link_to book_path(book) do%>
            <p>title:<%= book.title %></p>
          <%end%>
        </td>
        <td><p>bodyï¼š<%= book.body %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>



